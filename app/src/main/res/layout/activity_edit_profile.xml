<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.EditProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dark_gray"
            android:elevation="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"    >

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/close_image"
                    style="@style/toolbar_image"
                    android:src="@drawable/ic_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:id="@+id/header_text"
                    android:textSize="21sp"
                    android:textColor="@color/light_gray"
                    style="@style/toolbar_title"
                    android:text="@string/edit_profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/close_image"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <ImageView
                    android:id="@+id/save_image"
                    style="@style/toolbar_image"
                    android:src="@drawable/ic_check"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>
    
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/light_gray"
            android:src="@drawable/android_picture"
            android:layout_marginTop="15dp"/>
    <TextView
            android:id="@+id/name_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/name_input"
            android:text="@string/nickname"
            app:layout_constraintTop_toBottomOf="@id/profile_image" />

    <EditText
            android:id="@+id/name_input"
            style="@style/edit_profile_input"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/name_label" />

    <TextView
        android:id="@+id/city_label"
        style="@style/edit_profile_label"
        android:labelFor="@id/city_input"
        android:text="@string/city"
        app:layout_constraintTop_toBottomOf="@id/name_input" />

    <EditText
            android:id="@+id/city_input"
            style="@style/edit_profile_input"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/city_label" />
    <TextView
            android:id="@+id/auto_vendor_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/auto_vendor_input"
            android:text="@string/auto_vendor"
            app:layout_constraintTop_toBottomOf="@id/city_input" />

    <EditText
            android:id="@+id/auto_vendor_input"
            style="@style/edit_profile_input"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/auto_vendor_label" />
    <TextView
            android:id="@+id/auto_model_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/auto_model_input"
            android:text="@string/auto_model"
            app:layout_constraintTop_toBottomOf="@id/auto_vendor_input" />

    <EditText
            android:id="@+id/auto_model_input"
            style="@style/edit_profile_input"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/auto_model_label" />
    <TextView
            android:id="@+id/auto_number_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/auto_number_input"
            android:text="@string/auto_number"
            app:layout_constraintTop_toBottomOf="@id/auto_model_input" />

    <EditText
            android:id="@+id/auto_number_input"
            style="@style/edit_profile_input"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/auto_number_label" />
    <TextView
            android:id="@+id/private_info_text"
            style="@style/edit_profile_label"
            android:text="@string/contact_information"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/auto_number_input" />

    <TextView
            android:id="@+id/phone_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/phone_input"
            android:text="@string/phone"
            app:layout_constraintTop_toBottomOf="@id/private_info_text" />

    <EditText
            android:id="@+id/phone_input"
            style="@style/edit_profile_input"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/phone_label" />
    <TextView
            android:id="@+id/email_label"
            style="@style/edit_profile_label"
            android:labelFor="@id/email_input"
            android:text="@string/email"
            app:layout_constraintTop_toBottomOf="@id/phone_input" />

    <EditText
            android:id="@+id/email_input"
            style="@style/edit_profile_input"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/email_label" />
</android.support.constraint.ConstraintLayout>
</ScrollView>